    <noscript><div><img src="https://mc.yandex.ru/watch/102608125" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->
    <div id="blind-panel" class="container blind-panel">
      <a class="to-main-version" href="#">Обычная версия
        <span></span>
      </a>
      <div class="font-toggle">
        <span class="a-small js-toggle-fontsize selected" data-class="fontsize-small">a</span>
        <span class="a-normal js-toggle-fontsize" data-class="fontsize-middle">a</span>
        <span class="a-big js-toggle-fontsize" data-class="fontsize-big">a</span>
      </div>
      <div class="color-toggle">
        <span class="white js-toggle-color selected" data-class="color-white"></span>
        <span class="black js-toggle-color" data-class="color-black"></span>
        <span class="blue js-toggle-color" data-class="color-blue"></span>
      </div>
      <div class="image-toggle">
        Картинки
        <div class="js-toggle-img" data-class="image-off">
          <span></span>
          выкл
        </div>
        <div class="js-toggle-img selected" data-class="image-on">
          <span></span>
          вкл
        </div>
      </div>
    </div>
    {{ page_top }}
    {{ page }}
    {{ page_bottom }}
